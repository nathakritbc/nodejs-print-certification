<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
      crossorigin="anonymous"
    />

    <script src="https://unpkg.com/vue@3"></script>
    <title class="d-none">Print Certification</title>
    <style>
      body {
        font-size: 14px;
        font-family: sans-serif;
        color: rgba(17, 65, 111, 255);
      }
      .header {
        display: block;
      }
      @media print {
        @page {
          /* size: auto;
          margin: 0mm;
          margin-top: 30px;
          margin-left: 10px;
          margin-right: 10px; */
          size: A4;
          margin: 0mm;
        }
        body {
          font-size: 16px;
          font-family: sans-serif;
        }

        header nav,
        footer {
          display: none;
        }
        .sub-conten {
          position: relative;
          top: 300px;
        }

        .name-course {
          position: relative;
          top: 360px;
        }

        .pdf-image {
          transform: rotate(deg);
        }
      }

      .pdf-image {
        margin-bottom: 50px;
      }

      .sub-conten {
        position: relative;
        top: 370px;
      }

      .name-course {
        position: relative;
        top: 440px;
      }
    </style>
  </head>

  <body>
    <div id="app">
      <!-- <img src="./images/cert.png" alt="" srcset="" /> -->

      <h1 class="sub-conten text-center"><%= full_name %></h1>
      <h1 class="name-course text-center"><%= course_name %></h1>
      <img
        src="./images/cert.png"
        class="rounded mx-auto d-block pdf-image"
        width="900"
      />
    </div>

    <script>
      const { createApp } = Vue;

      createApp({
        mounted() {
          window.print();
        },
        data() {
          return {
            message: "Hello Vue!",
          };
        },
      }).mount("#app");
    </script>
  </body>
</html>
