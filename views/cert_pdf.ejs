  </head>

  <body>
    <div id="app">
      <!-- <img src="./images/cert.png" alt="" srcset="" /> -->

      <h1 class="sub-conten text-center"><%= full_name %></h1>
      <h1 class="name-course text-center"><%= course_name %></h1>
      <h6 class="received-date"><%= received_date %></h6>
      <!-- <img
        src="./images/cert.png"
        class="rounded mx-auto d-block pdf-image"
        width="900"
      /> -->
      <img
        src="<%= url_image %>"
        class="rounded mx-auto d-block pdf-image"
        width="900"
      />
    </div>

    <script>
      const { createApp } = Vue;

      createApp({
        mounted() {
          window.print();
        },
        data() {
          return {
            message: "Hello Vue!",
          };
        },
      }).mount("#app");
    </script>
  </body>
</html>
